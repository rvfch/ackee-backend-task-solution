{
  "name": "ackee-backend-task-solution",
  "description": "ackee-backend-task-solution",
  "version": "1.0.0-DEV",
  "author": "Roman Filatov <rvfchdev@gmail.com>",
  "contributors": [
    "Jaroslav Šmolík <grissius@gmail.com>",
    "Roman Filatov <rvfchdev@gmail.com>"
  ],
  "engines": {
    "node": "^18.16.0"
  },
  "scripts": {
    "build": "tsc",
    "build:docs": "openapi-generator-cli generate -i docs/api/openapi.yaml -g openapi -o docs/api/generated && openapi-typescript docs/api/openapi.yaml --output src/openapi/api.ts",
    "start": "node -r source-map-support/register dist/index.js",
    "start-lr": "tsc-watch --onSuccess \"npm run start\" | npx pino-pretty",
    "test": "jest --colors --detectOpenHandles --forceExit",
    "test-lr": "npm run test -- --watch",
    "cover": "npm run test -- --collectCoverage",
    "ci-test": "npm run cover -- --reporters=default --reporters=jest-junit --ci",
    "ci-lint": "npm run lint -- -f checkstyle -o ./output/checkstyle-result.xml",
    "lint": "npm run cs:eslint:check",
    "cs:prettier:check": "prettier --check '**/*.{ts,js,json,md}'",
    "cs:prettier:fix": "npm run cs:prettier:check -- --write '**/*.{ts,js,json,md}'",
    "cs:eslint:check": "eslint '**/*.ts' -f codeframe",
    "cs:eslint:fix": "npm run cs:eslint:check -- --fix",
    "cs:eclint:check": "eclint check '**/*'",
    "cs:eclint:fix": "eclint fix '**/*'",
    "check": "npm-check -i app -i errors -i config -i index; exit 0"
  },
  "jest-junit": {
    "outputDirectory": "output",
    "outputName": "./test.xml",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " > ",
    "usePathForSuiteName": "true"
  },
  "dependencies": {
    "@ackee/styleguide-backend-config": "^0.3.13",
    "configuru": "^0.6.2",
    "cosmas": "^3.3.4",
    "knex": "^2.5.1",
    "lodash": "^4.17.21",
    "node-healthz": "^1.0.2",
    "npm-run-series": "^1.0.1",
    "pino-http": "^8.4.0",
    "source-map-support": "^0.5.21",
    "sqlite3": "^5.1.6",
    "unicore": "^0.6.1"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.7.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/lodash": "^4.14.197",
    "@types/node": "^20.5.4",
    "@types/supertest-as-promised": "^2.0.38",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "eclint": "^2.8.1",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "jest-chain": "^1.1.6",
    "jest-extended": "^4.0.1",
    "jest-junit": "^16.0.0",
    "lint-staged": "^14.0.1",
    "npm-check": "^6.0.1",
    "openapi-typescript": "^6.5.3",
    "pino-pretty": "^10.2.0",
    "prettier": "^3.0.2",
    "prettier-config-ackee": "0.0.16",
    "supertest": "^6.3.3",
    "supertest-as-promised": "^4.0.2",
    "ts-jest": "^29.1.1",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.1.6"
  }
}
